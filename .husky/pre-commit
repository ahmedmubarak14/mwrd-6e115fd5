#!/usr/bin/env sh
. "$(dirname -- "$0")/_/husky.sh"

echo "ğŸ” Running i18n validation..."

# Run i18n validation
npm run validate:i18n

if [ $? -ne 0 ]; then
  echo "âŒ i18n validation failed. Please fix the issues before committing."
  echo "ğŸ’¡ Common issues:"
  echo "   - Hardcoded strings in JSX (use t('key') instead)"
  echo "   - Fallback anti-pattern (remove === 'key' ? 'fallback' checks)"
  echo "   - Missing translation keys"
  exit 1
fi

echo "âœ… i18n validation passed!"

# Run lint-staged for other checks
npm run lint-staged