# Supabase Configuration
# Replace with your actual Supabase project values
VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key-here

# Production Environment Settings
NODE_ENV=production
VITE_NODE_ENV=production

# API Keys (Required for production features)
# Get these from your respective service providers
VITE_OPENAI_API_KEY=sk-your-openai-key-here
VITE_RESEND_API_KEY=re_your-resend-api-key-here

# Application Settings
VITE_APP_NAME=MWRD Platform
VITE_APP_VERSION=1.0.0
VITE_APP_URL=https://your-domain.com

# Security Settings
VITE_ENABLE_SECURITY_HEADERS=true
VITE_ENABLE_CSP=true
VITE_ENABLE_RATE_LIMITING=true

# Performance Monitoring
VITE_ENABLE_PERFORMANCE_MONITORING=true
VITE_ENABLE_ERROR_REPORTING=true

# Feature Flags
VITE_ENABLE_REAL_TIME_CHAT=true
VITE_ENABLE_VIDEO_CALLS=true
VITE_ENABLE_FILE_UPLOADS=true
VITE_ENABLE_ANALYTICS=true

# Development/Debug Settings (Disable in production)
VITE_ENABLE_DEBUG_LOGS=false
VITE_ENABLE_CONSOLE_LOGS=false
VITE_SHOW_PERFORMANCE_MONITOR=false

# Database Settings
VITE_DATABASE_POOL_SIZE=10
VITE_DATABASE_TIMEOUT=30000

# Storage Settings  
VITE_MAX_FILE_SIZE=10485760
VITE_ALLOWED_FILE_TYPES=image/*,application/pdf,text/*

# Email Settings
VITE_FROM_EMAIL=noreply@your-domain.com
VITE_SUPPORT_EMAIL=support@your-domain.com

# Social/External Integrations
VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
VITE_SENTRY_DSN=https://your-sentry-dsn.ingest.sentry.io

# Deployment Settings
VITE_DEPLOY_ENV=production
VITE_BUILD_TIMESTAMP=
VITE_GIT_COMMIT_HASH=

# Regional Settings
VITE_DEFAULT_LANGUAGE=en
VITE_SUPPORTED_LANGUAGES=en,ar
VITE_DEFAULT_CURRENCY=SAR
VITE_DEFAULT_TIMEZONE=Asia/Riyadh

# Business Settings
VITE_PLATFORM_FEE_PERCENTAGE=2.5
VITE_MIN_ORDER_AMOUNT=100
VITE_MAX_ORDER_AMOUNT=1000000

# Rate Limiting
VITE_API_RATE_LIMIT=100
VITE_UPLOAD_RATE_LIMIT=10
VITE_MESSAGE_RATE_LIMIT=50

# Backup & Recovery
VITE_ENABLE_AUTO_BACKUP=true
VITE_BACKUP_RETENTION_DAYS=30

# Monitoring URLs
VITE_HEALTH_CHECK_URL=/api/health
VITE_STATUS_PAGE_URL=https://status.your-domain.com